// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Example {
  id              String           @id @default(cuid())
  slug            String           @unique
  title           String
  description     String
  body            String           @default("")
  imageUrl        String
  monthlyRevenue  Int              @default(0)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  categories      ExampleCategory[]
  favorites       Favorite[]
  comments        Comment[]

  @@index([slug])
  @@index([createdAt])
}

model Category {
  id        String           @id @default(cuid())
  name      String           @unique
  slug      String           @unique
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  examples  ExampleCategory[]

  @@index([slug])
}

model ExampleCategory {
  id          String   @id @default(cuid())
  exampleId   String
  categoryId  String
  example     Example  @relation(fields: [exampleId], references: [id], onDelete: Cascade)
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([exampleId, categoryId])
  @@index([exampleId])
  @@index([categoryId])
}

model Subscription {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())

  @@index([email])
}

model User {
  id              String      @id @default(cuid())
  email           String      @unique
  name            String?
  password        String
  plan            String      @default("Free") // Free, Standard, Premium
  downloadCount   Int         @default(0)
  downloadsThisMonth Int      @default(0)
  commentsThisMonth Int       @default(0)
  lastResetDate   DateTime?   // For monthly reset
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  activityLogs    ActivityLog[]
  favorites       Favorite[]
  comments        Comment[]
  purchases       Purchase[]

  @@index([email])
}

model ActivityLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String
  createdAt DateTime @default(now())
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  exampleId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  example   Example  @relation(fields: [exampleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, exampleId])
  @@index([userId])
  @@index([exampleId])
}

model Comment {
  id        String   @id @default(cuid())
  userId    String
  exampleId String
  text      String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  example   Example  @relation(fields: [exampleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([exampleId])
  @@index([userId])
}

model Purchase {
  id            String   @id @default(cuid())
  userId        String
  plan          String   // Standard or Premium
  amount        Float
  transactionId String   @unique
  status        String   @default("completed") // completed, pending, failed
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([transactionId])
}

